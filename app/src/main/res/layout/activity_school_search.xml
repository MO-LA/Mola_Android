<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".SchoolSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="105dp"
            android:fontFamily="@font/nexon_lv1_gothic"
            android:text="학교검색"
            android:textColor="#000000"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EAED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EAED"
        android:elevation="15dp"
        android:outlineSpotShadowColor="#494949" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/nexon_lv1_gothic"
            android:text="학교를 검색하세요."
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nexon_lv1_gothic"
            android:text="자신이 현재 다니고있는 중학교나\n    다녔던 중학교를 입력하세요."
            android:textColor="#3A3A3A"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/search_main"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/search_icon"
            android:fontFamily="@font/nexon_lv1_gothic_bold"
            android:hint=" 학교이름" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="322.5dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:text="건너뛰기 >"
        android:textColor="#5A5A5A"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="415dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_next_color"
        android:fontFamily="@font/nexon_lv1_gothic_bold"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</LinearLayout>