<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mola_logo" />

    <EditText
        android:id="@+id/edit_search_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" 자신이 원하는 학교를 딱!"
        android:fontFamily="@font/nexon_lv1_gothic_bold"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/border"
        android:drawableEnd="@drawable/search_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_grade"
            android:fontFamily="@font/nexon_lv1_gothic_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 평점순"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_schoolcatecory"
            android:fontFamily="@font/nexon_lv1_gothic_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교유형"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_subcatecory"
            android:fontFamily="@font/nexon_lv1_gothic_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서브유형"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_location"
            android:fontFamily="@font/nexon_lv1_gothic_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#E8EAED">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu"
        tools:layout_editor_absoluteX="16dp" />


</LinearLayout>