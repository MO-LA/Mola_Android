<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_school"
            android:layout_width="154dp"
            android:layout_height="143dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_dgsw" />

        <TextView
            android:id="@+id/tv_schoolname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="대구 소프트웨어고등학교"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/img_school"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_star"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/img_school"
            app:layout_constraintTop_toBottomOf="@+id/tv_schoolname"
            app:srcCompat="@drawable/ic_baseline_star_24" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="5.0"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/item_star"
            app:layout_constraintTop_toBottomOf="@+id/tv_schoolname" />

        <TextView
            android:id="@+id/tv_pick_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="(10+)"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/tv_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_schoolname" />

        <TextView
            android:id="@+id/school_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="마이스터고 - 구지"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/img_school"
            app:layout_constraintTop_toBottomOf="@+id/item_star" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>