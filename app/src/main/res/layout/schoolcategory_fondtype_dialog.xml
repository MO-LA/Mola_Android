<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="설립 유형을 선택해 주세요"
        android:textColor="#789eff"
        android:gravity="center"
        android:fontFamily="@font/nexon_lv1_gothic_bold"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/cate_fondtype_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="전체"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/cate_independence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="단설"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:textSize="23dp" />
    <TextView
        android:id="@+id/cate_establish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="병설"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/cate_accessories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="부속"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:textSize="23dp" />
    <Button
        android:id="@+id/button_category_fondtype_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#789eff"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:text="완료"
        android:textSize="20dp"/>
</LinearLayout>