<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지역을 입력해 주세요"
        android:textColor="#789eff"
        android:gravity="center"
        android:fontFamily="@font/nexon_lv1_gothic_bold"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="지역을 입력해 주세요"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_category_region_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#789eff"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nexon_lv1_gothic"
        android:text="완료"
        android:textSize="20dp"/>
</LinearLayout>